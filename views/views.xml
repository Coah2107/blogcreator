<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <!-- Form View -->
  <record id="view_blogpost_form" model="ir.ui.view">
    <field name="name">blogcreator.note.form</field>
    <field name="model">blogcreator.note</field>
    <field name="arch" type="xml">
      <form string="Blog Post">
        <header>
          <field name="state" widget="statusbar" statusbar_visible="draft,exported,approved"/>

          <!-- Button 1: DRAFT state - Hiển thị "Tạo bài viết" -->
          <button name="export_to_n8n" string="Tạo bài viết" type="object" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'draft')]}" help="Tạo bài viết qua n8n"/>

          <!-- Button 2: EXPORTED state - Hiển thị "Xuất bản" và "Tạo lại" -->
          <button name="action_approve" string="Phê duyệt" type="object" class="btn-primary" attrs="{'invisible': [('state', '!=', 'exported')]}" help="Xuất bản bài viết" groups="blogcreator.group_blogcreator_manager"/>

          <button name="action_recreate_post" string="Tạo lại bài viết" type="object" class="btn-warning" attrs="{'invisible': [('state', '!=', 'exported')]}" help="Tạo lại bài viết qua n8n"/>

          <!-- Button 3: APPROVED state - Hiển thị "Hủy xuất bản" và "Tạo lại" -->
          <button name="action_unapprove" string="Hủy xuất bản" type="object" class="btn-secondary" attrs="{'invisible': [('state', '!=', 'approved')]}" help="Hủy xuất bản bài viết"/>

          <button name="action_recreate_post" string="Tạo lại bài viết" type="object" class="btn-warning" attrs="{'invisible': [('state', '!=', 'approved')]}" help="Tạo lại bài viết qua n8n"/>
        </header>
        <sheet>
          <div class="oe_title">
            <h1>
              <field name="title" placeholder="Nhập tiêu đề..."/>
            </h1>
          </div>
          <group>
            <group>
              <field name="note_type"/>
              <field name="note_type_prompt" widget="text"/>
              <field name="tags" placeholder="Ví dụ: odoo, n8n, blog"/>
              <field name="user_id"/>
            </group>
            <group>
              <field name="is_published"/>
              <field name="exported_to_n8n"/>
              <field name="export_date" attrs="{'invisible': [('exported_to_n8n', '=', False)]}"/>
            </group>
          </group>
          <notebook>
            <page string="Nội dung">
              <field name="content" widget="html" options="{'collaborative': true, 'resizable': true, 'height': 400}"/>
            </page>
